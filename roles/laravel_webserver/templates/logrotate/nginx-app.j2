# Log rotation configuration for {{ app_name }} NGINX logs
# Generated by Ansible on {{ ansible_date_time.iso8601 }}

{{ laravel_webserver_access_log }} {{ laravel_webserver_error_log }}{% if webserver_enable_ssl | default(false) | bool %} {{ laravel_webserver_ssl_access_log }} {{ laravel_webserver_ssl_error_log }}{% endif %} {
    daily
    missingok
    rotate 52
    compress
    delaycompress
    notifempty
    create 0644 {{ nginx_user | default('www-data') }} {{ nginx_group | default('adm') }}
    sharedscripts
    prerotate
        if [ -d /etc/logrotate.d/httpd-prerotate ]; then \
            run-parts /etc/logrotate.d/httpd-prerotate; \
        fi \
    endscript
    postrotate
        invoke-rc.d nginx rotate >/dev/null 2>&1
    endscript
}