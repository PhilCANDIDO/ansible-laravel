# NPM Configuration
# Generated by Ansible - Customize as needed

{% if nodejs_npm_global_dir is defined and nodejs_npm_global_dir != '' %}
prefix={{ nodejs_npm_global_dir }}
{% endif %}

{% if nodejs_npm_cache_dir is defined and nodejs_npm_cache_dir != '' %}
cache={{ nodejs_npm_cache_dir }}
{% endif %}

{% if nodejs_npm_registry is defined and nodejs_npm_registry != '' %}
registry={{ nodejs_npm_registry }}
{% endif %}

# Security settings
audit-level=moderate
fund=false

# Performance settings
progress=false
loglevel=warn

{% for config in nodejs_npm_config_values %}
{{ config.key }}={{ config.value }}
{% endfor %}